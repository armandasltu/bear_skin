{% set attributes = attributes.addClass([
  'mt1',
  'mb1',
  'pt2',
  'pb2',
  'pr1',
  'pl1',
  'flex',
  'items-center',
  'border',
	type == 'status' ? 'green',
	type == 'warning' ? 'orange',
	type == 'error' ? 'red'
]) %}

<div {% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} {% if heading %}aria-label="{{ heading }}"{% endif %} {{ attributes }}>

  {% block heading %}
    {% if heading %}
      <h2 class="visually-hidden">{{ heading }}</h2>
    {% endif %}
  {% endblock heading %}

  {% block icon %}
    <div class="messages__icon inline-block mr1">
      {% if type == 'error' %}
        <i class="icon icon-exclamation-circle"></i>
      {% elseif type == 'warning' %}
          <i class="icon icon-bell"></i>
      {% else %}
          <i class="icon icon-check-circle"></i>
      {% endif %}
    </div>
  {% endblock icon %}

  {% block content %}
    {% if messages|length > 1 %}
      <ul class="messages__list m0 p0">
        {% for message in messages %}
          <li class="messages__item">{{ message }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="messages__list">
        {{ messages|first }}
      </div>
    {% endif %}
  {% endblock content %}
</div>
